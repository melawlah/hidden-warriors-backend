<%- include('layouts/header'); -%>

<!-- Checkout Section Begin -->
<section class="checkout spad">
  <div class="container">
    <div class="row"></div>
    <div class="checkout__form">
      <h4>Billing Details</h4>
      <form action="/add-appointment" method="POST">
        <div class="row">
          <input type="string" name="TaskName" value="<%=task%>" hidden />
          <input
            type="string"
            name="Price"
            value="<%=1.13*tasker.Price%>"
            hidden
          />
          <input type="string" name="Tasker" value="<%=tasker.Name%>" hidden />

          <div class="col-lg-8 col-md-6">
            <div class="checkout__input">
              <p>Appointment Date<span>*</span></p>
              <input type="datetime" name="DateTime" required/>
            </div>

            <div class="checkout__input">
              <p>Full Name<span>*</span></p>
              <input type="text" name="User" required />
            </div>

            <div class="checkout__input">
              <p>Country<span>*</span></p>
              <input type="text" name="Country" required />
            </div>
            <div class="checkout__input">
              <p>Address<span>*</span></p>
              <input
                type="text"
                placeholder="Street Address"
                class="checkout__input__add"
                name="Address" required
              />
              <input
                type="text"
                placeholder="Apartment, suite, unite ect (optinal)"
              />
            </div>
            <div class="checkout__input">
              <p>City<span>*</span></p>
              <input type="text" name="City" required/>
            </div>
            <div class="checkout__input">
              <p>Province<span>*</span></p>
              <input type="text" name="Province" required />
            </div>
            <div class="checkout__input">
              <p>Postcode<span>*</span></p>
              <input type="text" name="Postcode" required />
            </div>
            <div class="row">
              <div class="col-lg-6">
                <div class="checkout__input">
                  <p>Phone<span>*</span></p>
                  <input type="text" name="Phone" required />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="checkout__input">
                  <p>Email<span>*</span></p>
                  <input type="text" name="Email" required/>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-4 col-md-6">
            <div class="checkout__order">
              <h4>Your Order</h4>
              <div class="checkout__order__products">
                Services <span>Total</span>
              </div>

              <ul>
                <li><%= task%></li>
                <li><%= tasker.Name %> <span>$<%= tasker.Price%></span></li>
              </ul>
              <div class="checkout__order__subtotal">
                Subtotal <span>$<%= tasker.Price%></span>
              </div>
              <div class="checkout__order__total">
                Total <span>$<%=(1.13*tasker.Price).toFixed(2)%></span>
              </div>
              <p>
                This booking is done on per hour basis. Actual bill will be
                provided by the handyman on site depending on the time to
                complete the task.
              </p>
              <button type="submit" class="site-btn">PLACE ORDER</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
<!-- Checkout Section End -->
<%- include('layouts/footer'); -%>
